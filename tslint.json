{
  "defaultSeverity": "error",
  "extends": ["tslint-config-airbnb", "tslint-config-prettier", "tslint-react-hooks"],
  "jsRules": {},
  "rules": {
    "align": false,
    "arrow-return-shorthand": true,
    "await-promise": true,
    "binary-expression-operand-order": true,
    "class-name": true,
    "comment-format": [true, "check-space", "check-uppercase", "allow-trailing-lowercase"],
    "curly": true,
    "early-exit": true,
    "encoding": true,
    "eofline": true,
    "file-name-casing": [true, "camel-case"],
    "forin": true,
    "function-constructor": true,
    "import-name": false,
    "indent": false,
    "interface-name": [true, "always-prefix"],
    "interface-over-type-literal": true,
    "linebreak-style": [true, "LF"],
    "max-line-length": [false, 120],
    "newline-before-return": true,
    "no-any": true,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": true,
    "no-construct": true,
    "no-debugger": true,
    "no-duplicate-super": true,
    "no-duplicate-switch-case": true,
    "no-duplicate-variable": true,
    "no-else-after-return": [true, "allow-else-if"],
    "no-empty-interface": true,
    "no-eval": true,
    "no-for-in-array": true,
    "no-implicit-dependencies": true,
    "no-increment-decrement": false,
    "no-inferred-empty-object-type": true,
    "no-invalid-template-strings": true,
    "no-invalid-this": true,
    "no-misused-new": true,
    "no-namespace": true,
    "no-null-keyword": true,
    "no-null-undefined-union": true,
    "no-object-literal-type-assertion": true,
    "no-parameter-reassignment": true,
    "no-redundant-jsdoc": true,
    "no-reference": true,
    "no-return-await": true,
    "no-shadowed-variable": true,
    "no-sparse-arrays": true,
    "no-string-literal": true,
    "no-string-throw": true,
    "no-switch-case-fall-through": true,
    "no-tautology-expression": true,
    "no-this-assignment": true,
    "no-trailing-whitespace": true,
    "no-unbound-method": true,
    "no-unnecessary-callback-wrapper": true,
    "no-unnecessary-class": true,
    "no-unnecessary-initializer": true,
    "no-unsafe-finally": true,
    "no-unused": true,
    "no-unused-expression": true,
    "no-var-keyword": true,
    "no-void-expression": [true, "ignore-arrow-function-shorthand"],
    "number-literal-format": true,
    "object-literal-shorthand": true,
    "one-variable-per-declaration": [false],
    "prefer-const": true,
    "prefer-method-signature": true,
    "prefer-object-spread": true,
    "prefer-readonly": true,
    "prefer-template": false,
    "quotemark": {
      "options": ["double", "jsx-double", "avoid-escape", "avoid-template"]
    },
    "radix": true,
    "react-hooks-nesting": "error",
    "restrict-plus-operands": true,
    "semicolon": [true, "always", "ignore-bound-class-methods"],
    "static-this": true,
    "ter-arrow-parens": [
      true,
      "always",
      {
        "requireForBlockBody": false
      }
    ],
    "ter-indent": false,
    "trailing-comma": false,
    "triple-equals": [true, "allow-null-check"],
    "variable-name": [true, "allow-pascal-case"]
  },
  "rulesDirectory": []
}
